<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ControlTemplate x:Key="BorderedControlTemplate">
        <Border
            Style="{StaticResource BorderedControl}"
            IsEnabled="{Binding Source={x:RelativeSource TemplatedParent}, Path=IsEnabled}">
            <ContentPresenter />
        </Border>
    </ControlTemplate>
</ResourceDictionary>