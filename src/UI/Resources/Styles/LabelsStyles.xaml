<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style
        x:Key="BaseStyle"
        TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!--  THIS IS HERE TO SET BaseStyle AS DEFAULT FOR ANY Label  -->
    <Style
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}" />

    <!--  Standardized Text Styles for Consistent Typography to reflect Figma design  -->
    <Style
        x:Key="Headline"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
    </Style>
    <Style
        x:Key="SubHeadline"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="OpenSansBold" />
    </Style>
    <Style
        x:Key="HeadlineSmall"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="TitleLarge"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="TitleMedium"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="TitleSmall"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="BodyLarge"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="BodyMedium"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="BodySmall"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="LabelLarge"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="LabelMedium"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style
        x:Key="LabelMediumSemibold"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
    </Style>
    <Style
        x:Key="LabelSmall"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <Style
        x:Key="VerticalTextCentered"
        TargetType="Label"
        BasedOn="{StaticResource BaseStyle}">
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
    </Style>

    <Style
        x:Key="LabelSettingsGroup"
        TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="Padding" Value="32,0,0,0" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style
        x:Key="LabelSettingsTitle"
        TargetType="Label"
        BasedOn="{StaticResource LabelSettingsGroup}">
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalOptions" Value="End" />
    </Style>

    <Style
        x:Key="LabelInfo"
        TargetType="Label"
        BasedOn="{StaticResource LabelSettingsGroup}">
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style
        x:Key="SelectableItem"
        TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <Style
        x:Key="IconText"
        TargetType="Label">
        <Setter Property="FontFamily" Value="OpenSansBold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>
</ResourceDictionary>