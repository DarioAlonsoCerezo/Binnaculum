<?xml version="1.0" encoding="utf-8" ?>
<popups:BasePopup
    x:Class="Binnaculum.Popups.CurrencySelectorPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popups="clr-namespace:Binnaculum.Popups"
    xmlns:core="clr-namespace:Binnaculum.Core;assembly=Core"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    x:Name="Control"
    CanBeDismissedByTappingOutsideOfPopup="True"
    Color="Transparent">
    <Grid Padding="24,64">
        <Border Style="{StaticResource Popup}">
            <Grid RowDefinitions="Auto, 1*, Auto">
                <SearchBar x:Name="Searcher" />
                <CollectionView
                    x:Name="CurrencyList"
                    Grid.Row="1"
                    Margin="0,12">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Margin="12,16,12,0"
                                ColumnDefinitions="1*, Auto">
                                <Label
                                    Padding="0"
                                    Text="{Binding Title}" />
                                <Label
                                    Grid.Column="1"
                                    Margin="0,0,0,4"
                                    Style="{StaticResource LabelSettingsGroup}"
                                    Text="{Binding Code}" />
                                <Line Style="{StaticResource LineSettingsGroup}" />
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <controls:ButtonDiscard
                    x:Name="Discard"
                    Grid.Row="2" />
            </Grid>
        </Border>
    </Grid>
</popups:BasePopup>