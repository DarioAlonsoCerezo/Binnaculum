<?xml version="1.0" encoding="utf-8" ?>
<popups:BasePopup
    x:Class="Binnaculum.Popups.DecimalInputPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    xmlns:markdown="clr-namespace:Indiko.Maui.Controls.Markdown;assembly=Indiko.Maui.Controls.Markdown"
    xmlns:popups="clr-namespace:Binnaculum.Popups"
    x:Name="Control"
    Color="Transparent">
    <Grid
        x:Name="Container"
        Padding="24,0">
        <Border Style="{StaticResource Popup}">
            <VerticalStackLayout>
                <Label
                    x:Name="LabelTitle"
                    Margin="0,24,0,12"
                    Style="{StaticResource LabelSettingsTitle}"
                    HorizontalTextAlignment="Center" />
                <controls:BorderedEntry
                    x:Name="MultiplierEntry"
                    Margin="0,16,0,0"
                    IsMoneyEntry="True"
                    Text="100" />
                <controls:ButtonSaveOrDiscard
                    x:Name="SaveOrDiscard"
                    Margin="0,32,0,0" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</popups:BasePopup>