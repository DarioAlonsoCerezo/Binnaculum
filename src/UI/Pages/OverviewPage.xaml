<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Binnaculum.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">
    <Grid
        RowDefinitions="64,1*,1*"
        RowSpacing="0">

        <Label
            Margin="24,24,0,0"
            Text="{local:Translate OverviewTitle}"
            Style="{StaticResource SubHeadline}"
            HorizontalOptions="Start"
            FontFamily="OpenSansSemibold" />

        <Grid
            x:Name="AccountsContainer"
            Grid.Row="1"
            Margin="0,0,0,96"
            ColumnDefinitions="1*,2*">
            <Border
                WidthRequest="64"
                HeightRequest="64"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="Transparent"
                Stroke="{AppThemeBinding Light={StaticResource Gray200},
                                         Dark={StaticResource Primary}}"
                StrokeThickness="2"
                StrokeDashArray="4,4">
                <Grid>
                    <BoxView
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        HeightRequest="2.5"
                        WidthRequest="20"
                        CornerRadius="2"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200},
                                                          Dark={StaticResource Primary}}" />
                    <BoxView
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="2.5"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200},
                                                          Dark={StaticResource Primary}}"
                        HeightRequest="20"
                        CornerRadius="2" />
                </Grid>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer x:Name="AddAccount" />
                </Border.GestureRecognizers>
            </Border>
        </Grid>

        <Grid
            x:Name="HistoryContainer"
            Grid.Row="0"
            Grid.RowSpan="3">
            <Grid
                x:Name="HistoryBackground"
                BackgroundColor="{AppThemeBinding Light={StaticResource Black},
                                                  Dark={StaticResource White}}"
                Opacity="0.6"
                IsVisible="False" />
            <Border
                x:Name="History"
                BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                  Dark={StaticResource Black}}">
                <Grid>
                    <Grid
                        BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                          Dark={StaticResource Black}}"
                        VerticalOptions="Start"
                        HeightRequest="64">
                        <BoxView
                            Margin="0,16,0,0"
                            WidthRequest="40"
                            HeightRequest="4"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200},
                                                              Dark={StaticResource OffBlack}}" />
                        <Grid.GestureRecognizers>
                            <PanGestureRecognizer x:Name="HistoryGestured" />
                        </Grid.GestureRecognizers>
                    </Grid>

                </Grid>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="48,48,0,0" />
                </Border.StrokeShape>
            </Border>
        </Grid>
    </Grid>
</ContentPage>