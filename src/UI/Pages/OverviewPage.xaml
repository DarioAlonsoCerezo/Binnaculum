<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage
    x:Class="Binnaculum.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    xmlns:pages="clr-namespace:Binnaculum.Pages"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False">
    <Grid
        RowDefinitions="64,1*,1*"
        RowSpacing="0">

        <Label
            Margin="24,24,0,0"
            Text="{local:Translate OverviewTitle}"
            Style="{StaticResource SubHeadline}"
            HorizontalOptions="Start"
            FontFamily="OpenSansSemibold" />

        <Grid
            x:Name="AccountsContainer"
            Grid.Row="1"
            Margin="0,0,0,96"
            ColumnDefinitions="1*,2*">
            <Grid.Resources>
                <ResourceDictionary>
                    <controls:AccountTemplateSelector x:Key="AccountTemplateSelector" />
                </ResourceDictionary>
            </Grid.Resources>
            <controls:ButtonAdd
                x:Name="AddAccount"
                Scale="0.64" />
            <CarouselView
                x:Name="AccountsCarousel"
                Grid.Column="1"
                Margin="0,32"
                HorizontalScrollBarVisibility="Never"
                Loop="False"
                VerticalScrollBarVisibility="Never"
                ItemTemplate="{StaticResource AccountTemplateSelector}"
                PeekAreaInsets="15">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout
                        ItemSpacing="8"
                        SnapPointsType="MandatorySingle"
                        Orientation="Horizontal" />
                </CarouselView.ItemsLayout>
            </CarouselView>
        </Grid>

        <Grid
            x:Name="HistoryContainer"
            Grid.Row="0"
            Grid.RowSpan="3">
            <Grid
                x:Name="HistoryBackground"
                BackgroundColor="{AppThemeBinding Light={StaticResource Black},
                                                  Dark={StaticResource White}}"
                Opacity="0.6"
                IsVisible="False" />
            <Border
                x:Name="History"
                BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                  Dark={StaticResource Black}}">
                <Grid>
                    <Grid
                        BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                                          Dark={StaticResource Black}}"
                        VerticalOptions="Start"
                        HeightRequest="64">
                        <BoxView
                            Margin="0,16,0,0"
                            WidthRequest="40"
                            HeightRequest="4"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200},
                                                              Dark={StaticResource OffBlack}}" />
                        <Grid.GestureRecognizers>
                            <PanGestureRecognizer x:Name="HistoryGestured" />
                        </Grid.GestureRecognizers>
                    </Grid>

                    <CollectionView
                        x:Name="MovementsCollectionView"
                        Margin="4,64,4,0"
                        ItemSizingStrategy="MeasureFirstItem">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    BackgroundColor="Yellow"
                                    HeightRequest="90" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout
                                Orientation="Vertical"
                                ItemSpacing="4"
                                SnapPointsType="Mandatory"
                                SnapPointsAlignment="Start" />
                        </CollectionView.ItemsLayout>
                    </CollectionView>

                </Grid>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="48,48,0,0" />
                </Border.StrokeShape>
            </Border>
        </Grid>
    </Grid>
</pages:BasePage>