<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Binnaculum.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:pages="clr-namespace:Binnaculum.Pages">

    <TabBar>
        <ShellContent
            Title="{local:Translate TabOverview}"
            Icon="overview"
            ContentTemplate="{DataTemplate pages:OverviewPage}" />

        <ShellContent
            Title="{local:Translate TabMovements}"
            Icon="movements"
            ContentTemplate="{DataTemplate pages:MovementsPage}" />
        <ShellContent
            Title="{local:Translate TabTickers}"
            Icon="tickers"
            ContentTemplate="{DataTemplate pages:TickersPage}" />
        <ShellContent
            Title="{local:Translate TabCalendar}"
            Icon="calendar"
            ContentTemplate="{DataTemplate pages:CalendarPage}" />
        <ShellContent
            Title="{local:Translate TabSettings}"
            Icon="settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>