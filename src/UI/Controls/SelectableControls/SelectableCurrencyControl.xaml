<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.SelectableCurrencyControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Binnaculum.Controls">
    <Grid
        Margin="12,16,12,0"
        ColumnDefinitions="1*, Auto">
        <Label
            x:Name="CurrencyTitle"
            Padding="0" />
        <Label
            x:Name="CurrencyCode"
            Grid.Column="1"
            Margin="0,0,0,4"
            Style="{StaticResource LabelSettingsGroup}" />
        <Line Style="{StaticResource LineSettingsGroup}" />
        <Grid.GestureRecognizers>
            <TapGestureRecognizer x:Name="CurrencyGesture" />
        </Grid.GestureRecognizers>
    </Grid>
</controls:BaseContentView>