<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.BrokerMovementDepositControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Binnaculum.Controls">
    <VerticalStackLayout>
        <Label
            Text="Amount"
            Style="{StaticResource LabelSettingsTitle}" />

        <Border
            Padding="24,32"
            BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                              Dark={StaticResource Black}}"
            VerticalOptions="Start">
            <VerticalStackLayout>
                <controls:BorderedEntry
                    IsCurrencyVisible="True"
                    Placeholder="Type the amount" />
                <controls:BorderedDateTimePickerControl />

                <controls:BorderedEntry
                    Placeholder="Commissions"
                    IsMoneyEntry="True" />
                <controls:BorderedEntry
                    Placeholder="Fees"
                    IsMoneyEntry="True" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</controls:BaseContentView>
