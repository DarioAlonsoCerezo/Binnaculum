<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.BrokerMovementDepositControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Binnaculum.Controls">
    <VerticalStackLayout>
        <Label
            Text="Amount"
            Style="{StaticResource LabelSettingsTitle}" />

        <Border
            Padding="24,32"
            BackgroundColor="{AppThemeBinding Light={StaticResource White},
                                              Dark={StaticResource Black}}"
            VerticalOptions="Start">
            <VerticalStackLayout>
                <controls:BorderedEntry
                    Keyboard="Numeric"
                    IsCurrencyVisible="True"
                    Placeholder="Type the amount" />
                <Border Style="{StaticResource BorderedControl}">
                    <Grid ColumnDefinitions="1*,1*">
                        <controls:BorderlessDatePicker />
                        <controls:BorderlessTimePicker Grid.Column="1" />
                    </Grid>
                </Border>

                <controls:BorderedEntry
                    Placeholder="Commissions"
                    Keyboard="Numeric" />
                <controls:BorderedEntry
                    Placeholder="Fees"
                    Keyboard="Numeric" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</controls:BaseContentView>
