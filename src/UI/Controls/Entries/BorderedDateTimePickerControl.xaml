<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.BorderedDateTimePickerControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    ControlTemplate="{StaticResource BorderedControlTemplate}">
    <Grid
        x:Name="Container"
        ColumnDefinitions="1*,1*">
        <controls:BorderlessDatePicker x:Name="DateControl" />
        <controls:BorderlessTimePicker
            x:Name="TimeControl"
            Grid.Column="1" />
    </Grid>
</controls:BaseContentView>