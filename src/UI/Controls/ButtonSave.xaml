<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.ButtonSave"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    x:Name="Control"
    x:DataType="controls:ButtonSave">
    <Button
        x:Name="SaveButton"
        Text="{local:Translate Global_Button_Save}"
        IsEnabled="{Binding Source={x:Reference Control}, Path=IsEnabled}" />
</controls:BaseContentView>