<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.PercentageControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Binnaculum.Controls">
    <Label x:Name="PercentageLabel">
        <Label.FormattedText>
            <FormattedString>
                <Span
                    x:Name="PercentageValue"
                    FontFamily="OpenSansBold"
                    FontSize="45"
                    TextColor="{Binding Source={x:Reference PercentageLabel}, Path=TextColor}" />
                <Span
                    x:Name="PercentageDemcimals"
                    FontFamily="OpenSansSemibold"
                    FontSize="25"
                    TextColor="{Binding Source={x:Reference PercentageLabel}, Path=TextColor}" />
            </FormattedString>
        </Label.FormattedText>
    </Label>
</controls:BaseContentView>
