<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.ButtonDiscard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    x:Name="Control"
    x:DataType="controls:ButtonDiscard">
    <Label
        x:Name="DiscardText"
        IsEnabled="{Binding Source={x:Reference Control}, Path=IsEnabled}"
        Text="{local:Translate ButtonDiscard}"
        HorizontalTextAlignment="Center">
        <Label.GestureRecognizers>
            <TapGestureRecognizer x:Name="DiscardTapped" />
        </Label.GestureRecognizers>
    </Label>
</controls:BaseContentView>