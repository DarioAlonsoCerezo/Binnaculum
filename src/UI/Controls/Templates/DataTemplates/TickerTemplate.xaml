<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseContentView
    x:Class="Binnaculum.Controls.TickerTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls"
    AutomationId="TickerTemplate">
    <Grid Padding="12,12,12,0">
        <Border
            Padding="12"
            Style="{StaticResource Settings}">
            <Grid ColumnDefinitions="70,*,90">
                <controls:IconControl
                    x:Name="Icon"
                    Margin="12,4,0,0"
                    HorizontalOptions="Start"
                    VerticalOptions="Start" />
                <Label
                    x:Name="TickerName"
                    Grid.Column="1"
                    AutomationId="TickerTemplateName"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Start"
                    VerticalOptions="Center"
                    FontSize="Body"
                    Style="{StaticResource SelectableItem}" />
                <controls:PercentageControl
                    x:Name="Realized"
                    Grid.Column="2"
                    HorizontalOptions="End"
                    Scale="0.75" />
            </Grid>

        </Border>
    </Grid>
</controls:BaseContentView>
