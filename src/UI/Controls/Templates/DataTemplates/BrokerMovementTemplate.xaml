<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseMovementContentView
    x:Class="Binnaculum.Controls.BrokerMovementTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Binnaculum"
    xmlns:controls="clr-namespace:Binnaculum.Controls">
    <Grid>
        <controls:IconControl
            x:Name="Icon"
            Margin="12,4,0,0"
            HorizontalOptions="Start"
            VerticalOptions="Start"/>

        <!--  TITLE AND SUBTITLE  -->
        <VerticalStackLayout Padding="80,4,0,0">
            <Label
                x:Name="Title"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Start"
                VerticalOptions="Start"
                FontSize="Body"
                Style="{StaticResource SelectableItem}"/>
            <Label
                x:Name="SubTitle"
                IsVisible="False"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Start"
                VerticalOptions="Start"
                FontSize="Micro"
                Style="{StaticResource LabelInfo}"/>
        </VerticalStackLayout>

        <controls:MoneyControl
            x:Name="Amount"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TranslationY="14"/>

        <controls:MoneyControl
            x:Name="AmountConverted"
            Margin="0,0,10,0"
            IsVisible="False"
            Scale="0.75"
            Opacity="0.5"
            HorizontalOptions="End"
            VerticalOptions="Center"
            TranslationY="15"/>

        <Label
            x:Name="ACAT"
            IsVisible="False"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TranslationY="15">
            <Label.FormattedText>
                <FormattedString>
                    <Span
                        Text="x"
                        FontSize="Caption"
                        FontFamily="OpenSansSemibold"/>
                    <Span
                        x:Name="ACATQuantity"
                        FontSize="Title"
                        FontFamily="OpenSansBold"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <VerticalStackLayout
            Margin="0,4,20,0"
            HorizontalOptions="End"
            VerticalOptions="Start">
            <controls:TimeStampControl
                x:Name="TimeStamp"
                ShowTime="False"/>
        </VerticalStackLayout>

        <Line Style="{StaticResource LineSettingsGroup}"/>
    </Grid>
</controls:BaseMovementContentView>
