<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Binnaculum.UI.DeviceTests.Runners.VisualRunner.Pages.TestExecutionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Test Execution"
             Style="{StaticResource BasePageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Progress Header -->
        <StackLayout Grid.Row="0" 
                     BackgroundColor="{StaticResource SurfaceColor}"
                     Padding="16">
            <Label Text="Test Execution"
                   Style="{StaticResource TestTitleStyle}"
                   HorizontalOptions="Center" />
            <ProgressBar Progress="0.0"
                         Style="{StaticResource TestProgressBarStyle}"
                         Margin="0,8" />
            <Label Text="Ready to run tests..."
                   Style="{StaticResource TestDescriptionStyle}"
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Execution Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="16">
                <Label Text="This page will show real-time test execution progress."
                       Style="{StaticResource TestDescriptionStyle}"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>

        <!-- Control Buttons -->
        <StackLayout Grid.Row="2" 
                     Orientation="Horizontal"
                     BackgroundColor="{StaticResource SurfaceColor}"
                     Padding="16"
                     HorizontalOptions="Center">
            <Button Text="Stop Tests"
                    Style="{StaticResource SecondaryButtonStyle}"
                    IsEnabled="False" />
        </StackLayout>
    </Grid>
</ContentPage>