<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Test Status Colors -->
    <Color x:Key="TestPassedColor">#28a745</Color>
    <Color x:Key="TestFailedColor">#dc3545</Color>
    <Color x:Key="TestRunningColor">#ffc107</Color>
    <Color x:Key="TestPendingColor">#6c757d</Color>
    <Color x:Key="TestSkippedColor">#17a2b8</Color>

    <!-- Background Colors -->
    <Color x:Key="BackgroundColor">#f8f9fa</Color>
    <Color x:Key="SurfaceColor">White</Color>
    <Color x:Key="CardColor">White</Color>

    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#212529</Color>
    <Color x:Key="SecondaryTextColor">#6c757d</Color>
    <Color x:Key="AccentTextColor">#007bff</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#dee2e6</Color>
    <Color x:Key="FocusBorderColor">#007bff</Color>

</ResourceDictionary>