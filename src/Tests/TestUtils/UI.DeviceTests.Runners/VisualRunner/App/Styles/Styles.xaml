<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Page Style -->
    <Style x:Key="BasePageStyle" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundColor}" />
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource SurfaceColor}" />
    </Style>

    <!-- Test Item Card Style -->
    <Style x:Key="TestItemCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource CardColor}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Test Status Badge Style -->
    <Style x:Key="TestStatusBadgeStyle" TargetType="Border">
        <Setter Property="WidthRequest" Value="12" />
        <Setter Property="HeightRequest" Value="12" />
        <Setter Property="StrokeShape" Value="RoundRectangle 6" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <!-- Test Title Style -->
    <Style x:Key="TestTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Test Description Style -->
    <Style x:Key="TestDescriptionStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Progress Bar Style -->
    <Style x:Key="TestProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource AccentTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource BorderColor}" />
        <Setter Property="HeightRequest" Value="4" />
    </Style>

    <!-- Search Entry Style -->
    <Style x:Key="SearchEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryTextColor}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SecondaryTextColor}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Margin" Value="16,8" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentTextColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Margin" Value="8,4" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource AccentTextColor}" />
        <Setter Property="BorderColor" Value="{StaticResource AccentTextColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Margin" Value="8,4" />
    </Style>

</ResourceDictionary>