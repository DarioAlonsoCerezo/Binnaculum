<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="Binnaculum.UI.DeviceTests.Runners.VisualRunner.VisualTestRunnerShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:Binnaculum.UI.DeviceTests.Runners.VisualRunner.Pages">

    <!--
        The Visual Test Runner Shell provides tabbed navigation between:
        1. Test Discovery - Browse and select tests
        2. Test Execution - Real-time test running
        3. Test Results - Detailed results and failure information
    -->

    <FlyoutItem Title="Test Discovery" Icon="list.png">
        <ShellContent Title="Tests" 
                      ContentTemplate="{DataTemplate pages:TestDiscoveryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Test Execution" Icon="play.png">
        <ShellContent Title="Running" 
                      ContentTemplate="{DataTemplate pages:TestExecutionPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Test Results" Icon="results.png">
        <ShellContent Title="Results" 
                      ContentTemplate="{DataTemplate pages:TestResultsPage}" />
    </FlyoutItem>

</Shell>