<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="Binnaculum.UI.DeviceTests.Runners.VisualRunner.VisualTestRunnerApp"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Binnaculum.UI.DeviceTests.Runners.VisualRunner.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
            <converters:TestStatusToColorConverter x:Key="TestStatusToColorConverter" />
            <converters:ExpandCollapseTextConverter x:Key="ExpandCollapseTextConverter" />
            <converters:IntToBooleanConverter x:Key="IntToBooleanConverter" />
            <converters:SelectedTestCountConverter x:Key="SelectedTestCountConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>