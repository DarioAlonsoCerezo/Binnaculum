<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Core.Platform.MauiTester.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Core Platform Tester">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20">

            <!--  Header  -->
            <Label
                Text="Core Platform Tester"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                SemanticProperties.HeadingLevel="Level1"/>

            <Label
                Text="Validates Core library functionality in real MAUI environment"
                FontSize="14"
                HorizontalTextAlignment="Center"
                TextColor="Gray"/>

            <!--  Test Buttons  -->
            <Button
                x:Name="RunOverviewReactiveTestButton"
                Text="Run Overview Test"
                FontSize="16"
                BackgroundColor="MediumSeaGreen"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunOverviewReactiveTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates Overview database and collection initialization"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunBrokerAccountReactiveTestButton"
                Text="Run BrokerAccount Creation Test"
                FontSize="16"
                BackgroundColor="DarkSeaGreen"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunBrokerAccountReactiveTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates BrokerAccount creation and snapshot generation"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunBrokerAccountDepositReactiveTestButton"
                Text="Run BrokerAccount + Deposit Test"
                FontSize="16"
                BackgroundColor="DarkOrange"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunBrokerAccountDepositReactiveTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates BrokerAccount creation with deposit movement"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunBrokerAccountMultipleMovementsSignalBasedTestButton"
                Text="Run BrokerAccount Multiple Movements Test"
                FontSize="16"
                BackgroundColor="MediumOrchid"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunBrokerAccountMultipleMovementsSignalBasedTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates BrokerAccount with multiple deposits and withdrawals"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunOptionsImportIntegrationSignalBasedTestButton"
                Text="Run Options Import Test"
                FontSize="16"
                BackgroundColor="IndianRed"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunOptionsImportIntegrationSignalBasedTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates Tastytrade options CSV import workflow"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunDepositsWithdrawalsIntegrationTestButton"
                Text="Run Money Movements Test"
                FontSize="16"
                BackgroundColor="SteelBlue"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunDepositsWithdrawalsIntegrationTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates money movements (deposits/withdrawals) import"
                HorizontalOptions="Fill"/>

            <Button
                x:Name="RunPfizerImportIntegrationTestButton"
                Text="Run Pfizer Import Test"
                FontSize="16"
                BackgroundColor="RoyalBlue"
                TextColor="White"
                HeightRequest="50"
                Clicked="OnRunPfizerImportIntegrationTestClicked"
                IsEnabled="{Binding CanRunTest}"
                SemanticProperties.Hint="Validates Pfizer (PFE) options import"
                HorizontalOptions="Fill"/>

            <!--  Loading Indicator  -->
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                Spacing="10"
                IsVisible="{Binding IsRunning}">
                <ActivityIndicator
                    IsRunning="{Binding IsRunning}"
                    Color="DodgerBlue"
                    WidthRequest="20"
                    HeightRequest="20"/>
                <Label
                    Text="Test running, please wait..."
                    FontSize="14"
                    TextColor="Gray"
                    VerticalTextAlignment="Center"/>
            </StackLayout>

            <!--  Status Display  -->
            <Border
                Padding="15"
                BackgroundColor="LightGray"
                StrokeShape="RoundRectangle 5">
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Status:"
                        FontAttributes="Bold"/>
                    <Label
                        x:Name="StatusLabel"
                        Text="{Binding OverallStatus}"
                        FontSize="14"/>
                    <Label
                        x:Name="OverallResultLabel"
                        Text="{Binding OverallStatusIcon}"
                        FontSize="16"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Border>

            <!--  Test Results Section  -->
            <Border
                Padding="15"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 5"
                IsVisible="{Binding IsCompleted}">
                <Border.Shadow>
                    <Shadow
                        Brush="Black"
                        Radius="5"
                        Opacity="0.3"
                        Offset="2,2"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="10">
                    <Label
                        Text="Test Results"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"/>

                    <!--  Results List  -->
                    <CollectionView
                        x:Name="ResultsCollectionView"
                        ItemsSource="{Binding Steps}"
                        HeightRequest="300">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid
                                    Padding="10,5"
                                    ColumnDefinitions="30,*,120">
                                    <Label
                                        Grid.Column="0"
                                        Text="{Binding StatusIcon}"
                                        FontSize="16"
                                        VerticalTextAlignment="Center"/>
                                    <Label
                                        Grid.Column="1"
                                        Text="{Binding StepName}"
                                        FontSize="14"
                                        VerticalTextAlignment="Center"/>
                                    <Label
                                        Grid.Column="2"
                                        Margin="0,0,0,12"
                                        Text="{Binding Details}"
                                        FontSize="12"
                                        TextColor="Gray"
                                        VerticalTextAlignment="Center"/>
                                    <Border
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        StrokeThickness="1"
                                        VerticalOptions="End"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!--  Action Buttons  -->
            <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center"
                Spacing="10"
                IsVisible="{Binding IsCompleted}">
                <Button
                    x:Name="ViewDetailsButton"
                    Text="View Details"
                    BackgroundColor="Gray"
                    TextColor="White"
                    Clicked="OnViewDetailsClicked"
                    WidthRequest="120"/>
                <Button
                    x:Name="ClearResultsButton"
                    Text="Clear Results"
                    BackgroundColor="OrangeRed"
                    TextColor="White"
                    Clicked="OnClearResultsClicked"
                    WidthRequest="120"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
