<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <NUnit>
    <!-- Control parallel execution for UI tests -->
    <NumberOfTestWorkers>1</NumberOfTestWorkers>
    <Parallelizable>false</Parallelizable>
    
    <!-- Set timeouts for longer operations like APK building -->
    <DefaultTimeout>300000</DefaultTimeout> <!-- 5 minutes -->
    
    <!-- Ensure tests run in a predictable order -->
    <RandomSeed>123456</RandomSeed>
    
    <!-- Retry failed tests once (useful for flaky UI tests) -->
    <MaxRetryCount>1</MaxRetryCount>
  </NUnit>
  
  <TestRunParameters>
    <!-- Custom parameters for UI tests -->
    <Parameter name="BuildTimeout" value="600" /> <!-- 10 minutes for build operations -->
    <Parameter name="AppiumTimeout" value="30" />   <!-- 30 seconds for element waits -->
    <Parameter name="InstallTimeout" value="120" /> <!-- 2 minutes for app installation -->
  </TestRunParameters>
</RunSettings>