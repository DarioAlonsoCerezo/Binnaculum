<Project>
  <PropertyGroup>
    <ManagePackageVersionsCentrally>true</ManagePackageVersionsCentrally>
    <MauiVersion>9.0.100</MauiVersion>
    <ReactiveUiVersion>20.4.1</ReactiveUiVersion>
  </PropertyGroup>
  <!-- MAUI -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.Maui.Core" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Controls.Compatibility" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Controls.Core" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Controls.Build.Tasks" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Controls.Xaml" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Essentials" Version="$(MauiVersion)" />
    <PackageVersion Include="Microsoft.Maui.Resizetizer" Version="$(MauiVersion)" />
    <PackageVersion Include="Xunit.SkippableFact" Version="1.5.23" />
  </ItemGroup>
  <!-- FSharp -->
  <ItemGroup>
    <PackageVersion Include="FSharp.Data" Version="6.3.0" />
    <PackageVersion Include="FSharp.Core" Version="9.0.303" />
  </ItemGroup>
  <!-- SQLite -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.Data.Sqlite.Core" Version="9.0.8" />
    <PackageVersion Include="SQLitePCLRaw.bundle_green" Version="2.1.11" />
  </ItemGroup>
  <!-- ReactiveUI -->
  <ItemGroup>
    <PackageVersion Include="ReactiveUI" Version="$(ReactiveUiVersion)" />
    <PackageVersion Include="ReactiveUI.Maui" Version="$(ReactiveUiVersion)" />
    <PackageVersion Include="DynamicData" Version="9.4.1" />
    <PackageVersion Include="System.Reactive" Version="6.0.2" />
  </ItemGroup>
  <!-- Microfost extensions -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Logging.Debug" Version="9.0.8" />
  </ItemGroup>
  <!-- Testing -->
  <ItemGroup>
    <PackageVersion Include="Microsoft.NET.Test.Sdk" Version="17.14.1" />
    <PackageVersion Include="NUnit" Version="4.4.0" />
    <PackageVersion Include="NUnit.Analyzers" Version="4.10.0" />
    <PackageVersion Include="NUnit3TestAdapter" Version="5.1.0" />
    <PackageVersion Include="coverlet.collector" Version="6.0.4" />
    <!-- XUnit for Device Tests -->
    <PackageVersion Include="xunit" Version="2.9.3" />
    <PackageVersion Include="xunit.runner.visualstudio" Version="3.1.4" />
    <!-- Appium for E2E Testing -->
    <PackageVersion Include="Appium.WebDriver" Version="8.0.0" />
    <PackageVersion Include="Selenium.WebDriver" Version="4.35.0" />
    <!-- Server management packages -->
    <PackageVersion Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageVersion Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
    <!-- Performance Testing -->
    <PackageVersion Include="BenchmarkDotNet" Version="0.14.0" />
    <!-- MAUI TestUtils - Note: Currently commented out in projects as it may not be available -->
    <!-- <PackageVersion Include="Microsoft.Maui.TestUtils.DeviceTests" Version="$(MauiVersion)" /> -->
  </ItemGroup>
  <!-- Others-->
  <ItemGroup>
    <PackageVersion Include="CommunityToolkit.Maui" Version="12.2.0" />
    <PackageVersion Include="Plugin.Maui.Calendar" Version="2.0.9" />
    <PackageVersion Include="Indiko.Maui.Controls.Markdown" Version="1.3.12" />
    <!-- Command Line Interface -->
    <PackageVersion Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>
</Project>